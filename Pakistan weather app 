            if (!city) {
                showError('Ø¨Ø±Ø§Ø¦Û’ Ú©Ø±Ù… Ø´ÛØ± Ú©Ø§ Ù†Ø§Ù… Ø¯Ø±Ø¬ Ú©Ø±ÛŒÚº');
